{
    "type": "dqn_agent",
    "batch_size": 64,
    "memory": {
        "type": "replay",
        "capacity": 10000
    },
    "optimizer": {
      "type": "adam",
      "learning_rate": 1e-3
    },

    "discount": 0.97,

    "states_preprocessing_spec": [
        {
            "type": "image_resize",
            "width": 84,
            "height": 84
        },
        {
            "type": "grayscale"
        },
        {
            "type": "divide",
            "scale": 255
        }
    ],

    "explorations_spec": {
        "type": "epsilon_decay",
        "initial_epsilon": 1.0,
        "final_epsilon": 0.1,
        "timesteps": 1000000
    }
}
